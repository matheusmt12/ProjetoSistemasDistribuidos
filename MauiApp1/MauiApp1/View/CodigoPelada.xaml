<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.View.CodigoPelada"
             Title="CodigoPelada">

    <VerticalStackLayout>

        <Label Text="Codigo Pelada:"
          HorizontalOptions="Center"
          VerticalOptions="Center"
          Padding="10"
          Grid.Column="0"
          Grid.Row="2"
        />
        <Entry Placeholder="Digite o codigo da pelada"
          x:Name="codPelada"
          Grid.Row="2"
          Grid.Column="1"
        />
        <Button Text="Entrar na pelada" 
        x:Name="BtnEntrarCodigo"
        Clicked="EntrarPelada"
         Grid.ColumnSpan="2"
         Grid.Row="5"/>

        <Button Text="Criar Pelada" 
         x:Name="BtnCriarPelada"
         Clicked="CriarPelada"
          Grid.ColumnSpan="2"
          Grid.Row="5"/>

    </VerticalStackLayout>
</ContentPage>